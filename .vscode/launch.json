{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Express Server",
      "program": "${workspaceFolder}/apps/mocka/src/main.ts", // Update to your main file
      "outFiles": ["${workspaceFolder}/dist/apps/mocka/**/*.js"], // Adjust as needed
      "runtimeArgs": ["--inspect-brk"], // This will pause execution on startup
      "port": 9229,
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
