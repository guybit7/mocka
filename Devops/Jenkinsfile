pipeline {
    agent any
    parameters {
        choice(
            name: 'BuildVariant',
            choices: ['Development', 'Staging', 'Production'],
            description: 'Select the build variant'
            )

        choice(
            name: 'deleteNodeModules',
            choices: ['Yes', 'No'],
            description: 'Delete node modules?'
            )
    }

    environment {
        BUILD_VARIANT = ""
        DELETE_NODE_MODULES = "No"
    }

    tools {
        nodejs "node-20.15.0"
    }

    stages {
        stage('Set Enviorment Variable') {
            steps {
                script {
                    BUILD_VARIANT = params.buildVariant
                }
            }
        }
        
        stage('pre run') {
            steps {
              bat "echo Build completed for variant: ${BUILD_VARIANT} Latest"
            }
        }

        stage('install') {
            steps {
                script {
                    if (DELETE_NODE_MODULES == 'Yes') {
                        bat 'rmdir /s /q node_modules'
                    }
                    bat 'npm install'
                }
            }
        }

        stage('build') {
            steps {
                bat 'npx nx run mocka-ui:build'
            }
        }
    }

     post {
        always {
            echo 'Cleaning up...'
        }
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
