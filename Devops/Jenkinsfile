pipeline {
    agent any
    parameters {
        choice choices: ['Development', 'Staging', 'Production'], description: 'Select the build variant', name: 'BuildVariant'
        choice choices: ['Yes', 'No'],  description: 'Delete node modules?', name: 'deleteNodeModules'
    }

    environment {
        BUILD_VARIANT = ""
        DELETE_NODE_MODULES = "No"
    }

    tools {
        nodejs "node-20.15.0"
    }

    stages {
        stage('Set Enviorment Variable') {
            steps {
                script {
                    bat "echo Set Enviorment Variable -> ${params.BUILD_VARIANT}"
                }
            }
        }
        
        stage('pre run') {
            steps {
              bat "echo Build completed for variant: ${params.BUILD_VARIANT} Latest"
            }
        }

        stage('install') {
            steps {
                script {
                    if (DELETE_NODE_MODULES == 'Yes') {
                        bat 'rmdir /s /q node_modules'
                    }
                    bat 'npm install'
                }
            }
        }

        stage('build') {
            steps {
                bat 'npx nx run mocka-ui:build'
            }
        }
    }

     post {
        always {
            echo 'Cleaning up...'
        }
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
